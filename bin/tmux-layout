#!/bin/sh

# New detached session
tmux new -s broucz -d -n editor

# Create 2 new windows
tmux neww -t broucz -n run
tmux neww -t broucz -n logs

# Create a new panes in window 3 (2|2)
tmux selectw -t broucz:3
tmux splitw -h -p 50
tmux splitw -v -p 50
tmux selectp -t 1
tmux splitw -v -p 50
tmux selectp -t 1

# Create a new panes in window 2 (1|1)
tmux selectw -t broucz:2
tmux splitw -h -p 50
tmux selectp -t 1

# Create a new panes in window 1
tmux selectw -t broucz:1
tmux splitw -h -p 35
tmux splitw -v -p 50
tmux selectp -t 1

# Select first window
tmux selectw -t broucz:1
